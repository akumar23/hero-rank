// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]    
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_URL")
    referentialIntegrity = "prisma"    
}

model Vote {
    id String @id @default(cuid())
    createdAt DateTime @default(now())

    votedFor        Hero @relation(name: "votesFor", fields: [votedForId], references: [id])
    votedForId      Int
    votedAgainst    Hero @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
    votedAgainstId  Int

    @@index([votedForId])
    @@index([votedAgainstId])

}

model Hero {

    id Int @id

    name        String
    url         String 
    VoteFor     Vote[] @relation("votesFor")
    VoteAgainst Vote[] @relation("votesAgainst")

}
